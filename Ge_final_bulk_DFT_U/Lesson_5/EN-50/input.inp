&CONTROL
! .control.settings
calculation               = 'scf',
restart_mode              = 'from_scratch',
prefix                    = 'scf',
pseudo_dir                = '/shared/ESPRESSO/PSLIBRARY/1.0.0/pbe/PSEUDOPOTENTIALS/',
wf_collect                = .false.,

! .control.io
outdir                    = './tmp/',
verbosity                 = 'low',
disk_io                   = 'none',
wf_collect                = .true.,

! .control.ion_relax
tprnfor                   = .true.,
tstress                   = .true.,
forc_conv_thr             = 0.001,
etot_conv_thr             = 0.0001,
nstep                     = 100,
/

&SYSTEM
! .system.structure
ibrav                     = 0,
nat                       = 2,
ntyp                      = 1,

! .system.ecut
ecutwfc                   = 50,
ecutrho                   = 250,

! .system.occupations 
occupations               = 'smearing',
smearing                  = 'fd',
degauss                   = 0.007,

! .system.additional_keywords
tot_charge                = 0,
/

&ELECTRONS
! .electrons
diagonalization           = 'david',
conv_thr                  = 1e-06,
electron_maxstep          = 100,
mixing_mode               = 'plain',
mixing_beta               = 0.7,
/

! .atomic_species
ATOMIC_SPECIES
