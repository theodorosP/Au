import matplotlib.pyplot as plt
import numpy as np

data = np.loadtxt("bands.dat.gnu")
k_points = data[:,0]
energy_values = data[:,1]-5.7160

plt.title("Au Band structure")
plt.xlabel("k points")
plt.ylabel("energy values of k points in eV")
plt.scatter(k_points , energy_values, s = 1)
plt.ylim(-15 , 6)
ax = plt.axes()

ticks = (k_points[0], k_points[110], k_points[105+55], k_points[105+55+55], k_points[105+55+55+135], k_points[105+55+55+135+143])


label = (r'$\Gamma$','X','W','L', r'$\Gamma$', 'K')
ax.set_xticks(ticks)
ax.set_xticklabels(label)
plt.axvline(x = ticks[0], color = "black", linestyle = "--")
plt.axvline(x = ticks[1], color = "black", linestyle = "--")
plt.axvline(x = ticks[2], color = "black", linestyle = "--")
plt.axvline(x = ticks[3], color = "black", linestyle = "--")
plt.axvline(x = ticks[4], color = "black", linestyle = "--")
plt.axvline(x = ticks[5], color = "black", linestyle = "--")
plt.axhline(y = 0, color = "black", linestyle = "dotted")

plt.show()


